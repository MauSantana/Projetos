<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:padding="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_projeto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_project"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/border2"
            android:src="@drawable/example_project"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Project World 3D  "
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_project" />

            <LinearLayout
                android:id="@+id/tb_button"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/example_project"
                android:onClick="onCustomToggleClick"
                android:orientation="horizontal" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>